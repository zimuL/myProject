<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mian.fragment_main.MainFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_17"
        android:background="@color/color_blue" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/color_blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="首页"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/color_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_main_location_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="潍坊市"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_33"/>
        <TextView
            android:id="@+id/tv_main_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="搜索出行地"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:background="@drawable/solid_gray_radius4"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"/>
        <TextView
            android:id="@+id/tv_main_location_weather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="17℃"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_33"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160">
                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/con_ban_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:scaleType="fitXY"
                    android:background="@color/main_bg_color"
                    app:canLoop="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="@dimen/dp_15"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_main_scenic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="景区"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:drawableTop="@mipmap/ic_main_scenic"/>
                <TextView
                    android:id="@+id/tv_main_villages"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="乡镇"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:drawableTop="@mipmap/ic_main_villages"/>
                <TextView
                    android:id="@+id/tv_main_museum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="博物馆"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:drawableTop="@mipmap/ic_main_museum"/>
                <TextView
                    android:id="@+id/tv_main_nearby"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="附近"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:drawableTop="@mipmap/ic_main_nearby"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="周末去哪儿"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/icon_right_black"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_33"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_weekend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:gravity="center_vertical"/>

            <com.zimu.my2018.quyouui.widget.viewpager.WrapContentHeightViewPager
                android:id="@+id/vp_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.zimu.my2018.quyouui.widget.viewpager.WrapContentHeightViewPager>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>