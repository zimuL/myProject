<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nearby_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_33"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="name"/>
        <TextView
            android:id="@+id/tv_nearby_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_66"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nearby_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_blue"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:background="@drawable/solid_gray_radius4"
                tools:text="特色风味"/>
            <TextView
                android:id="@+id/tv_nearby_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_66"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                tools:text="51米"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_nearby_route"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_scenic_route"
        android:text="路线"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_11"
        android:gravity="center"
        android:layout_gravity="center_vertical"/>
</LinearLayout>