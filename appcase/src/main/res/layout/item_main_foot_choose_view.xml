<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_header"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            android:background="@color/main_bg_color"
            android:scaleType="fitXY"
            app:roundAsCircle="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    tools:text="用户"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_33"/>
                <TextView
                    android:id="@+id/tv_sex_age"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_3"
                    android:paddingLeft="@dimen/dp_3"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="21"
                    android:background="@drawable/solid_pink_radius4"
                    android:drawableLeft="@mipmap/ic_sex"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/tv_class_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="LV2"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_33"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="2018.10.05 10:08"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_33"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="36km"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_33"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_10">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_content"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/main_bg_color"
            app:roundedCornerRadius="@dimen/dp_4"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_brief"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_13"
            android:lineSpacingExtra="@dimen/dp_5"
            tools:text="简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/dividing_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1918"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_blue"
                android:drawableLeft="@mipmap/ic_footprint_praise"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2060"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_blue"
                android:drawableLeft="@mipmap/ic_footprint_share"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="589"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_blue"
                android:drawableLeft="@mipmap/ic_footprint_message"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>